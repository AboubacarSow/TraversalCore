@model UserForUpdateDto
@{
    ViewData["Title"] = "Profil Güncelle";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div style="width:750px;margin:auto;">

    <form method="post" asp-action="Update" asp-controller="Profile" asp-area="Member" enctype="mu">
        <div class="text-danger" > @Html.ValidationSummary()</div>
        <input type="hidden" asp-for="Id" />
        <label class="form-label">Ad</label>
        <input type="text"  asp-for="FirstName" class="form-control" />
        <br />
        <label class="form-label">Soyad</label>
        <input type="text"  asp-for="LastName" class="form-control" />
        <br />
        <label class="form-label">Mail Adresi</label>
        <input type="text"  asp-for="Email" class="form-control" />
        <br />
        <label class="form-label">Telefon </label>
        <input type="text"  asp-for="PhoneNumber" class="form-control" />
        <br />
        <label class="form-label">Cinsiyet</label>
        <div class="row">
            <div class="col-6">
                <div class="form-check">
                    <input type="radio" asp-for="Gender" class="form-check-input" id="male" value="true"/>
                    <label class="form-check-label" for="male" >Erkek</label>
                </div>
            </div>
            <div class="col-6">
                <div class="form-check">
                    <input type="radio" asp-for="Gender" class="form-check-input" id="female" value="false"/>
                    <label class="form-check-label" for="female" >  Kadın</label>
                </div>
            </div>
        </div>
        <br />
        <label class="form-label">Resim Yükleyin</label>
        <input type="file" asp-for="ImageUrl" class="form-control" />
        <br />
        <label class="form-label">Şifreniz</label>
        <input type="password" asp-for="Password" class="form-control" /><br/>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Güncelle
                <i class="fas fa-pen-square"></i>
            </button>
        </div>
    </form>
</div>
