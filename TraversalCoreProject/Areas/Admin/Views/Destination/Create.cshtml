@model CreateDestinationDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h6 class="text-center">Rota Ekleme</h6>
<div class="m-auto" style="width:780px">
    <div class="text-danger text-center">@Html.ValidationSummary()</div>
    <form method="post" enctype="multipart/form-data">
        <label class="form-label">Şehir</label>
        <input type="text" class="form-control" asp-for="City" /><br /> 
        <label class="form-label">Fıyat</label>
        <input type="number" class="form-control" asp-for="Price" /><br />
        <label class="form-label">Gündüz Gece</label>
        <input type="text" class="form-control" asp-for="DayNight" /><br />
        <label class="form-label">Kapasiti </label>
        <input type="number" class="form-control" asp-for="Capacity" /><br />
        <label class="form-label">Açıklama</label>
        <input type="text" class="form-control" asp-for="Description" /><br />
        <label class="form-label">Resim Yükle</label>
        <input type="file" class="form-control" asp-for="ImageUrl" /><br />
        <div class="text-center">
            <button class="btn btn-outline-primary" type="submit" ><i class="fas fa-plus me-2"></i> Ekle </button>  

        </div>

    </form>
</div>

