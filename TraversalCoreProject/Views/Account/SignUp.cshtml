@model UserRegistrationDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="/Register_Theme/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Traversal Rezervasyon</h5>
                            <h3>Hesap Oluşturma </h3>
                            <p>
                                Birbirinden deneyimli rehberlerimiz eşliğinde İskandinav ülkelerinin soğuğunu, Akdeniz ülkelerinin sıcaklığını, güzel ülkemizin Kapadokya'dan Sürmene'ye,
                                Ölüdeniz'den Asos'a, Balkan Turundan Mısır Çöllerine kadar aklınıza gelen her yere bir tık uzaktayız. Seyahatlerimize katılmak için hemen kayıt olun...
                            </p>
                            <a asp-action="SignIn" class="read-more-1 btn">Hemen Başlıyalım</a>
                        </div>

                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        @* <h4>Join Us</h4> *@
                        <H4>Ücretsiz Hesap Oluşturun</H4>
                    </div>
                    <form asp-action="SignUp" method="post" class="signin-form">
                        <div class="form-input">
                            <label>Ad</label>
                            <input type="text" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" style="color:red"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyad</label>
                            <input type="text" asp-for="LastName" />
                            <span asp-validation-for="LastName" style="color:red"></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adı</label>
                            <input type="text" asp-for="UserName" />
                            <span asp-validation-for="UserName" style="color:red"></span>
                        </div>
                        <div class="form-input">
                            <label>Mail Adresi</label>
                            <input type="email" asp-for="Email"/>
                            <span asp-validation-for="Email" style="color:red"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre</label>
                            <input type="password" asp-for="Password" />
                            <span asp-validation-for="Password" style="color:red"></span>
                        </div>
                        <div class="form-input">
                            <label>Tekrar Şifre</label>
                            <input type="password" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                        </div>
                        <label class="container">
                            I agree to <a href="#">Conditions</a> of Use and <a href="#">Privacy</a>
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn" type="submit">Kayıt Ol</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Today Copyright
                            <a href="http://w3layouts.com/" target="_blank">W3layouts</a>
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section>
</body>

</html>